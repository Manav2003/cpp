class Solution {
public:
    int romanToInt(string s) {
        map<char,int> m={{'I',1},{'V',5},{'X',10},{'L',50},{'C',100},{'D',500},{'M',1000}};
        int ans=0;
        for(int i=0;i<s.length();i++)
        {
            if(i<s.length()-1 && ((s[i]=='I' && (s[i+1]=='V' || s[i+1]=='X')) || (s[i]=='X' && (s[i+1]=='L' || s[i+1]=='C'))||((s[i]=='C') &&(s[i+1]=='D' || s[i+1]=='M') )))
            ans+=-m[s[i]];
            else
            ans+=m[s[i]];
        }
        return ans;
    }
};
